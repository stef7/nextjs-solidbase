{
  "name": "nextjs-solidbase",
  "version": "0.0.1",
  "private": true,
  "packageManager": "yarn@3.2.3",
  "scripts": {
    "dev": "yarn cnv && next dev",
    "test": "jest --coverage",
    "build": "yarn cnv && NODE_ENV=test yarn test --ci && next build && yarn postbuild-e2e",
    "start": "yarn cnv && next start",
    "lint": "yarn cnv && next lint",
    "dev-e2e": "cypress run",
    "postbuild-e2e": "concurrently -k 'yarn:start -p 3005' 'wait-on -v http-get://127.0.0.1:3005 && yarn dev-e2e' -n next,cy -c magenta,cyan",
    "cnv": "node ./scripts/check-node-version.js",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "http-status-codes": "^2.2.0",
    "next": "^12.3.0",
    "nprogress": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^18.7.18",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "10.4.10",
    "concurrently": "^7.4.0",
    "cypress": "^10.8.0",
    "eslint": "^8.23.1",
    "eslint-config-next": "^12.3.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unicorn": "^43.0.2",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "lint-staged": "^13.0.3",
    "postcss": "8.4.16",
    "prettier": "^2.7.1",
    "tailwindcss": "3.1.8",
    "typescript": "^4.8.3",
    "wait-on": "^6.0.1"
  },
  "engines": {
    "node": ">=16.0.0 <17.0.0",
    "npm": "please-use-yarn",
    "yarn": ">=3.2.3"
  }
}
